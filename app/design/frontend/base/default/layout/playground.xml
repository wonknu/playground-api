<?xml version="1.0"?>
<layout version="0.1.0">
<!--
PlayGround layout that add custom script
-->

    <default translate="label" module="playground-api">
        <reference name="head">
			<block type="core/text" name="playground.js">
				<action method="setText">
					<text>
						<![CDATA[
							<script type="text/javascript"
							    data-pg-api-key="key_first"
                                        data-mouth="true"
                                            src="http://ic.adfab.fr/mouthnode/playground-init/js/pg.min.js"></script>
						
							<script type="text/javascript">
						]]>
					</text>
				</action>
			</block>
        </reference>
    </default>

</layout>
